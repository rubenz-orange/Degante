---
import Layout from "../layouts/Layout.astro";

const contactInfo = {
  address:
    "Plaza Buenavista No 2 - 306, Col. Guerrero, Alcaldía Cuauhtémoc, C.P. 06300, Ciudad de México.",
  phones: ["55 1795 3511", "55 3433 8168"],
  mobile: "55 3433 8168",
  emails: ["degantearquitectos@yahoo.com.mx", "degantearq@gmail.com"],
  hours: "Lunes a Viernes de 9:00 a 18:00 hrs.",
};
---

<Layout
  title="Ubicación y Contacto | Jiménez Degante | Sede Buenavista CDMX"
  description="Contacte a Jiménez Degante Arquitectos en Cuauhtémoc, CDMX. Teléfonos oficina: 55 1795 3511 y 55 3433 8168. Atención presencial en Plaza Buenavista."
>
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "ContactPage",
      "mainEntity": {
        "@type": "ProfessionalService",
        "name": "Jiménez Degante Arquitectos",
        "image": "https://jimenezdegante.com/social-share.jpg",
        "telephone": "+525517953511",
        "email": "degantearquitectos@yahoo.com.mx",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Plaza Buenavista No 2 - 306, Col. Guerrero",
          "addressLocality": "Ciudad de México",
          "addressRegion": "CDMX",
          "postalCode": "06300",
          "addressCountry": "MX"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 19.439051,
          "longitude": -99.155456
        },
        "openingHours": "Mo,Tu,We,Th,Fr 09:00-18:00",
        "contactPoint": [
          {
            "@type": "ContactPoint",
            "telephone": "+525517953511",
            "contactType": "customer service",
            "areaServed": "MX",
            "availableLanguage": "Spanish"
          },
          {
            "@type": "ContactPoint",
            "telephone": "+525534338168",
            "contactType": "mobile",
            "areaServed": "MX",
            "availableLanguage": "Spanish"
          }
        ]
      }
    }
  </script>
  <div class="min-h-screen flex flex-col lg:flex-row bg-white overflow-hidden">
    <!-- Info Panel -->
    <div
      class="lg:w-1/2 p-8 md:p-20 lg:p-32 flex flex-col justify-center relative bg-light z-10"
    >
      <div class="absolute top-0 left-0 w-24 h-24 bg-primary/5 rounded-br-full">
      </div>

      <div class="reveal">
        <span
          class="text-primary font-black tracking-[0.4em] text-xs uppercase mb-8 block"
          >Presencia Local</span
        >
        <h1
          class="text-6xl md:text-8xl font-black text-dark mb-12 tracking-tighter leading-none"
        >
          Agende una cita.
        </h1>

        <div class="space-y-12">
          <!-- Address Row -->
          <div class="group">
            <h3
              class="text-xs font-black uppercase tracking-widest text-slate-400 mb-4 group-hover:text-primary transition-colors"
            >
              Sede Corporativa
            </h3>
            <p class="text-2xl font-bold text-dark leading-snug">
              {contactInfo.address}
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Phone Row -->
            <div>
              <h3
                class="text-xs font-black uppercase tracking-widest text-slate-400 mb-4"
              >
                Directorio Telefónico
              </h3>
              <div class="flex flex-col gap-2">
                {
                  contactInfo.phones.map((phone) => (
                    <a
                      href={`tel:${phone.replace(/\s/g, "")}`}
                      class="text-xl font-bold text-dark hover:text-primary transition-all flex items-center gap-3 group"
                    >
                      {phone}
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 opacity-0 group-hover:opacity-100 transition-opacity"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 8l4 4m0 0l-4 4m4-4H3"
                        />
                      </svg>
                    </a>
                  ))
                }
              </div>
            </div>

            <!-- Email Row -->
            <div>
              <h3
                class="text-xs font-black uppercase tracking-widest text-slate-400 mb-4"
              >
                Escríbanos
              </h3>
              <div class="flex flex-col gap-4">
                {
                  contactInfo.emails.map((email) => (
                    <a
                      href={`mailto:${email}`}
                      class="text-sm font-bold text-dark hover:text-primary transition-all underline decoration-primary/30 decoration-2 underline-offset-4"
                    >
                      {email}
                    </a>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- Hours Row -->
          <div class="pt-12 border-t border-slate-200">
            <h3
              class="text-xs font-black uppercase tracking-widest text-slate-400 mb-4 italic"
            >
              Horario de Atención Presencial
            </h3>
            <p class="text-lg font-bold text-dark">{contactInfo.hours}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Map Section -->
    <div class="lg:w-1/2 h-[600px] lg:h-screen relative bg-slate-200">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3762.382688846666!2d-99.15545622409549!3d19.43905098184139!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1f8d22dd65f2d%3A0xe1c0282924151740!2sPlaza%20Buenavista%202%2C%20Buenavista%2C%20Cuauht%C3%A9moc%2C%2006350%20Ciudad%20de%20M%C3%A9xico%2C%20CDMX!5e0!3m2!1ses!2smx!4v1708200000000!5m2!1ses!2smx"
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="absolute inset-0 grayscale contrast-125 brightness-90 hover:grayscale-0 transition-all duration-1000"
      ></iframe>

      <!-- Floating Glass Card Over Map -->
      <div
        class="absolute bottom-10 left-10 right-10 md:left-auto md:right-10 md:w-80 glass p-8 rounded-3xl shadow-4xl animate-slide-up"
      >
        <div class="flex flex-col items-center text-center">
          <div
            class="w-12 h-12 bg-dark rounded-full flex items-center justify-center text-primary mb-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-dark mb-2 tracking-tighter">
            Referencia de Acceso
          </h4>
          <p class="text-xs text-slate-500 leading-relaxed">
            Estamos ubicados frente al Metro Buenavista y Tren Suburbano, dentro
            de Plaza Buenavista, Oficina 306.
          </p>
          <a
            href="https://maps.app.goo.gl/k9e7W2rG6QY9rU6X9"
            target="_blank"
            class="mt-6 text-[10px] font-black uppercase tracking-widest text-primary hover:tracking-[0.2em] transition-all"
          >
            Obtener Ruta
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("active");
          }
        });
      },
      { threshold: 0.1 },
    );

    document.querySelectorAll(".reveal").forEach((el) => observer.observe(el));
  </script>
</Layout>

<style>
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-slide-up {
    animation: slide-up 1s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }
</style>
