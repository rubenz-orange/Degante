---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";

const services = [
  {
    title: "Obras y Proyectos",
    description: "Gestión completa de manifestaciones de construcción, regularizaciones, licencias especiales y diseño arquitectónico.",
    image: "https://images.unsplash.com/photo-1541888946425-d81bb19240f5?auto=format&fit=crop&q=80",
    link: `${import.meta.env.BASE_URL}obras`,
    tag: "TÉCNICO",
    dark: false
  },
  {
    title: "Trámites Mercantiles",
    description: "Apertura de negocios, licencias de funcionamiento, uso de suelo y programas de protección civil.",
    image: "https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&q=80",
    link: `${import.meta.env.BASE_URL}tramites-mercantiles`,
    tag: "COMERCIAL",
    dark: true
  },
  {
    title: "Gestoría Administrativa",
    description: "Trámites ante SEDUVI, INBA, INAH y SEDEMA. Soluciones legales y administrativas.",
    image: "https://images.unsplash.com/photo-1450101499163-c8848c66ca85?auto=format&fit=crop&q=80",
    link: `${import.meta.env.BASE_URL}tramites-generales`,
    tag: "LEGAL",
    dark: false
  },
];

const stats = [
  { value: "25+", label: "Años de Experiencia" },
  { value: "1.2k+", label: "Proyectos Regulados" },
  { value: "100%", label: "Cumplimiento Legal" },
  { value: "500+", label: "Clientes Corporativos" },
];

const certs = ["DRO", "C/DUYA", "C/SE", "C/I", "PDU"];
---

<Layout title="Jiménez Degante | Arquitectura & Consultoría Premium">
  <Hero
    title="Arquitectura legal y técnica en regla."
    subtitle="Protegemos su patrimonio y agilizamos su crecimiento comercial mediante consultoría técnica de alto nivel en la CDMX."
    ctaText="Consultoría Gratuita"
    backgroundImage="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?auto=format&fit=crop&q=85&w=1920"
  />

  <!-- Stats Section -->
  <section class="relative z-10 -mt-20">
    <div class="container mx-auto px-6">
      <div class="glass p-12 rounded-[2rem] shadow-2xl flex flex-wrap justify-between gap-8 backdrop-blur-3xl">
        {stats.map((stat) => (
          <div class="flex flex-col items-center md:items-start reveal">
            <span class="text-5xl md:text-6xl font-black text-dark mb-2 tracking-tighter">{stat.value}</span>
            <span class="text-xs font-bold uppercase tracking-widest text-primary">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-32 bg-white overflow-hidden">
    <div class="container mx-auto px-6">
      <div class="flex flex-col lg:flex-row gap-20 items-center">
        <div class="lg:w-1/2 reveal">
          <div class="inline-flex items-center gap-2 mb-6">
             <span class="w-8 h-1 bg-primary rounded-full"></span>
             <span class="text-sm font-bold uppercase tracking-widest text-slate-400">Sobre Nosotros</span>
          </div>
          <h2 class="text-4xl md:text-6xl font-black text-dark mb-8 leading-[1.1]">
            Expertos en la complejidad normativa de la <span class="text-gradient">CDMX.</span>
          </h2>
          <p class="text-xl text-slate-500 mb-10 leading-relaxed max-w-xl">
            Fundada en 1999, nuestra firma combina la visión arquitectónica con la precisión legal. Somos el aliado estratégico de desarrolladores y dueños de negocio que buscan seguridad y excelencia.
          </p>
          <div class="flex flex-wrap gap-4">
            {certs.map((cert) => (
              <span class="flex items-center gap-2 bg-slate-50 text-dark px-4 py-2 rounded-full text-xs font-black border border-slate-200">
                <span class="w-1.5 h-1.5 bg-primary rounded-full animate-pulse"></span>
                {cert}
              </span>
            ))}
          </div>
        </div>
        <div class="lg:w-1/2 relative reveal delay-200">
          <div class="relative rounded-3xl overflow-hidden shadow-3xl">
            <img src="https://images.unsplash.com/photo-1497366754035-f200968a6e72?auto=format&fit=crop&q=80&w=1200" alt="Consultoría" class="w-full aspect-square md:aspect-video object-cover" />
            <div class="absolute inset-0 bg-gradient-to-t from-dark/60 to-transparent"></div>
          </div>
          <!-- Decorative element -->
          <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-primary/20 rounded-full blur-3xl"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid: Asymmetric -->
  <section class="py-32 bg-slate-50">
    <div class="container mx-auto px-6">
      <div class="text-center mb-24 reveal">
        <h2 class="text-4xl md:text-7xl font-black text-dark mb-6 tracking-tighter">Nuestras Áreas.</h2>
        <div class="w-24 h-2 bg-primary mx-auto rounded-full"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 max-w-7xl mx-auto">
        {services.map((service, i) => (
          <a
            href={service.link}
            class={`reveal delay-${(i + 1) * 100} group relative bg-white rounded-[2.5rem] p-10 shadow-xl shadow-black/5 hover:shadow-primary/40 transition-all duration-700 overflow-hidden ${service.dark ? 'bg-dark text-white' : ''}`}
          >
            <!-- Background Image on Hover -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-10 transition-opacity duration-700">
              <img src={service.image} alt="" class="w-full h-full object-cover grayscale" />
            </div>

            <div class="relative z-10 h-full flex flex-col items-start">
               <span class={`mb-8 px-4 py-1.5 rounded-full text-[10px] font-black tracking-widest uppercase ${service.dark ? 'bg-primary text-dark' : 'bg-slate-100 text-slate-500'}`}>
                 {service.tag}
               </span>
               <h3 class="text-3xl font-bold mb-6 group-hover:text-primary transition-colors leading-tight">
                 {service.title}
               </h3>
               <p class={`text-base mb-10 leading-relaxed ${service.dark ? 'text-slate-400' : 'text-slate-500'}`}>
                 {service.description}
               </p>
               <div class="mt-auto flex items-center gap-3 text-xs font-black uppercase tracking-widest group-hover:gap-6 transition-all">
                 Ver Soluciones
                 <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                 </svg>
               </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA: Minimal & Bold -->
  <section class="py-40 bg-dark relative overflow-hidden">
    <!-- Particles/Glows -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full bg-[radial-gradient(circle_at_center,_rgba(243,156,18,0.1),_transparent_70%)]"></div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <div class="reveal">
        <h2 class="text-5xl md:text-9xl font-black text-white mb-10 tracking-[ -0.05em] leading-[0.9]">
          Hagámoslo <br /><span class="text-gradient">Correcto.</span>
        </h2>
        <p class="text-xl md:text-3xl text-slate-400 mb-16 max-w-3xl mx-auto font-light leading-relaxed">
          Proteja su inversión hoy. Inicie una auditoría documental con nuestro equipo experto.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-6">
          <a
            href={`${import.meta.env.BASE_URL}ubicacion`}
            class="bg-primary text-dark font-black tracking-widest uppercase text-xs px-12 py-6 rounded-full hover:bg-white hover:shadow-3xl transition-all duration-500"
          >
            Agendar Videollamada
          </a>
          <a
            href="tel:55469274"
            class="bg-white/10 text-white font-black tracking-widest uppercase text-xs px-12 py-6 rounded-full hover:bg-white hover:text-dark transition-all duration-500"
          >
            Llamar Oficina
          </a>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Reveal Animation Logic
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active');
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px"
    });

    document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
  </script>
</Layout>
